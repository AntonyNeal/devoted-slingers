# ============================================================================
# AZURE CONFIGURATION FOR BOSCA-SLINGERS
# ============================================================================

# ============================================================================
# AZURE DATABASE FOR POSTGRESQL
# ============================================================================
# Format: postgresql://username:password@servername.postgres.database.azure.com:5432/dbname?sslmode=require
# Get from Azure Portal > PostgreSQL > Connection strings
DATABASE_URL=postgresql://boscaadmin@bosca-slingers:PASSWORD@bosca-slingers.postgres.database.azure.com:5432/boscaslingers?sslmode=require

# ============================================================================
# AZURE APP SERVICE CONFIGURATION
# ============================================================================
# Frontend URL (Azure Static Web Apps or App Service)
VITE_API_BASE_URL=https://bosca-slingers-api.azurewebsites.net
ALLOWED_ORIGIN=https://bosca-slingers.azurewebsites.net

# API Port (Azure App Service uses PORT env variable)
PORT=8080

# ============================================================================
# AZURE STORAGE (for file uploads, images, etc.)
# ============================================================================
AZURE_STORAGE_ACCOUNT_NAME=boscaslingers
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=boscaslingers;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=bookings

# ============================================================================
# EMAIL SERVICE (Azure Communication Services or SendGrid)
# ============================================================================
# Option 1: Azure Communication Services
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-acs.communication.azure.com/;accesskey=your_key

# Option 2: SendGrid (marketplace add-on)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=bookings@bosca-slingers.com
BUSINESS_NOTIFICATION_EMAIL=notifications@bosca-slingers.com

# ============================================================================
# PAYMENT GATEWAY
# ============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ============================================================================
# MTG / SCRYFALL INTEGRATION
# ============================================================================
SCRYFALL_API_BASE_URL=https://api.scryfall.com
SCRYFALL_RATE_LIMIT_DELAY=100

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Azure AD Authentication (optional, for coach login)
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id

# ============================================================================
# ANALYTICS
# ============================================================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
AZURE_APPLICATION_INSIGHTS_KEY=your_app_insights_key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_BOOKING_ENABLED=true
VITE_PAYMENTS_ENABLED=true
VITE_ANALYTICS_ENABLED=true
VITE_SCRYFALL_ENABLED=true

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=production
DEBUG=false
WEBSITE_NODE_DEFAULT_VERSION=18-lts

# ============================================================================
# AZURE DEPLOYMENT NOTES
# ============================================================================
# 1. Create Azure Database for PostgreSQL Flexible Server
# 2. Create two App Services: one for frontend, one for API
# 3. Or use Azure Static Web Apps for frontend + App Service for API
# 4. Configure Application Settings in Azure Portal with these values
# 5. Enable CORS in API App Service settings
# 6. Enable SSL/HTTPS
# 7. Configure custom domain if needed
